########################################### WiFi Module ###########################################
class WiFiModule:
    """WiFi reconnaissance module"""
    def __init__(self, interface: str) -> None:
        self.interface = interface
        self.monitor_interface = f"{interface}mon"
        self.scan_results = []
    
    def setup_monitor_mode(self) -> str:
        """Put wireless interface into monitor mode"""
        print_status(f"{YELLOW}Setting up monitor mode on {self.interface}{RESET}") 
        cmd = f"sudo ifconfig {self.interface} down && sudo iwconfig {self.interface} mode monitor && sudo ifconfig {self.interface} up && sudo airmon-ng check kill"
        output = subprocess.check_output(cmd, shell=True, text=True)
        if output:
            print_status(f'\n{GREEN}Successfully set to monitor mode: {self.interface}!{RESET}')
        elif not output:
            print_error('\nAn error occured during change of mode!')
    
    def setup_manage_mode(self) -> str:
        """Put wireless interface into manage mode"""
        print(f"\n{YELLOW}[+] Setting up manage mode on {self.interface}{RESET}")
        cmd = f"sudo ifconfig {self.interface} down && sudo iwconfig {self.interface} mode manage && sudo ifconfig {self.interface} up && sudo service NetworkManager restart"
        subprocess.check_output(cmd, shell=True, text=True)
        print_status(f'{GREEN}Successfully set to manage mode: {self.interface}!{RESET}')

### Display About ###
def about() -> None:
    prog, description='xharvestor', (
        f'{RED}\t\t\t━━━━━━━━━━\t\t\t'
        f'{YELLOW}Bio: {RESET}{GREEN}I am a 19-year-old skilled hacker and programmer with expertise in ICS/SCADA security,'
        f'{GREEN}Wireless exploitation (Wi-Fi/Bluetooth/RF) & Automotive systems hacking.'
        f'{RED}\t\t\t━━━━━━━━━━\t\t\t'
        f'{YELLOW} About: {RESET}{CYAN}xharvestor is a specialized,{RESET} '
        f'{CYAN}modular Python-based reconnaissance suite designed for security assessments of radio frequency (RF),{RESET} '
        f'{CYAN}wireless (bluetooth & wifi),{RESET} '
        f'{CYAN}industrial control system (SCADA),{RESET} '
        f'{CYAN}and automotive systems.{RESET} '
        f'{CYAN}It integrates multiple tools and scripts into a unified workflow for probing,{RESET} '
        f'{CYAN}analyzing, and documenting findings from the physical and wireless world.{RESET}'
        )
    parser = argparse.ArgumentParser(prog=prog, description=description)
    parser.print_help()


### Main Function ###
def main():
    # ========== MAIN LOOP ========== #
    text_animation()
    while True:
        show_menu()
        choice = input(f"\n{GREEN}root@{socket.gethostname()}:~$ ")
        if choice == "0":
            killer = f"\n[💀] Closing The Program...\n"
            for word in killer:
              print(word, end='', flush=True)
              time.sleep(0.05)  
            break

        elif choice == "1":
            print(f"\n--- BlueTooth ---\n")
            print(f"{RED}[!] This section is still under development...{RESET}")
            time.sleep(3)
            os.system('cls' if os.name == 'nt' else 'clear')
            text_animation()

        elif choice == "2":
            wifi = WiFiModule('wlo1')
            text_animation()
            #wifi.setup_monitor_mode()    
            wifi.setup_manage_mode()

        elif choice == "3":
            print(f"\n--- Automobile ---\n")
            print(f"{RED}[!] This section is still under development...{RESET}")
            time.sleep(3)
            os.system('cls' if os.name == 'nt' else 'clear')
            text_animation()

        elif choice == '4':
            print(f"\n--- Radio Frequency ---\n")
            print(f"{RED}[!] This section is still under development...{RESET}")
            time.sleep(3)
            os.system('cls' if os.name == 'nt' else 'clear')
            text_animation()

        elif choice == '5':
            print(f"\n--- Industrial Control System - SCADA ---\n")
            print(f"{RED}[!] This section is still under development...{RESET}")
            time.sleep(3)
            os.system('cls' if os.name == 'nt' else 'clear')
            text_animation()

        elif choice == '6':
            time_choice = str(input(f'{GREEN}[?] Choose time stamps [Read Bio & About][default = 10]>>> {RESET}'))
            if not time_choice:
                about()
                time.sleep(10)
            else: 
                about()
                time.sleep(int(time_choice))
                
            os.system('cls' if os.name == 'nt' else 'clear')
            text_animation()

        elif choice == '99':
            os.system('cls' if os.name == 'nt' else 'clear')
            text_animation()
            print(f"\n{YELLOW}\t[🚀] Updating XHARVESTOR...{RESET}\n")
            print(f"{YELLOW}\t[🚀] Update & Upgrade Completion...")

        else:
            os.system('cls' if os.name == 'nt' else 'clear')
            text_animation()

if __name__ == '__main__':
    if not sys.argv[0]:
        print_warning(f" Please run as root") 
    else:
        main()